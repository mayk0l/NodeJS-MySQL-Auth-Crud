<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Sign Up</h3>
                </div>
                <div class="card-body ">
                    <form action="/signup" method="post">
                    <img src="/img/logo.jpg" alt="maykol logo" class="card-img-top mx-auto m-2 rounded-circle w-50">
                        <div class="mb-3">
                            <input type="text" name="fullname" placeholder="Full Name" class="form-control" autofocus>
                        </div>
                        <div class="mb-3">
                            <input type="text" name="username" placeholder="Username" class="form-control">
                        </div>
                        <div class="mb-3">
                            <input type="password" name="password" placeholder="Password" class="form-control">
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-success btn-block">
                                Sign Up
                            </button>
                        </div>
                        <div>Already have an account?</div>
                        <a href="/signin" class="text-decoration-none text-info fw-semibold">Log in</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>